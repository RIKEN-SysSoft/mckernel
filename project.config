[access]
	inheritFrom = All-Projects
[project]
	description = McKernel
[submit]
	mergeContent = true
	action = rebase if necessary
[access "refs/*"]
	owner = group riken
[access "refs/for/refs/*"]
	read = group riken
	push = group riken
[access "refs/heads/*"]
	read = group riken
	create = group riken
	push = +force group riken
	pushMerge = group riken
	forgeCommitter = group mckernel-bots
	label-Code-Review = -2..+2 group riken
	label-Verified = -1..+1 group riken
	label-Verified = -1..+1 group mckernel-bots
	rebase = group riken
	removeReviewer = group riken
	submit = group riken
[access "refs/tags/*"]
	push = group riken
	push = +force group riken
[commentlink "redmine"]
	match = "#(\\d+)"
	link = https://postpeta.pccluster.org/redmine/issues/$1
[receive]
	requireChangeId = true
[label "Code-Review"]
	copyAllScoresOnTrivialRebase = true
[label "Verified"]
	defaultValue = 0
	copyAllScoresIfNoCodeChange = true
